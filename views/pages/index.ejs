<% layout('layouts/boilerplate') %>

    <div class="col-8"> 
        <h1 class="text-center">All Pages</h1>
        <div>
            <a href="/pages/new">Add a Page</a>
        </div>
    
        <% for (let c of pages){%>
            <div class="card mb-3">
                <div class="row">
                        <div class="card-body ps-4">
                            <h5 class="card-title"><%= c.title %></h5>
                            <p class="card-text"><b>DESCRIPTION : </b><%= c.shortDescription %></p>
                            <a class="btn btn-primary" href="/pages/<%=c._id%>">View more...</a>
                        </div>
                    
                </div>
            </div>
        <% }%>
    </div>   