<% layout('layouts/boilerplate') %>

    <div class="col-8"> 
            <div class="card mb-3">
                <div class="card-body">
                <h2 class="card-title"><%= page.title %></h2>
                <p class="card-text"><b>DESCRIPTION : </b><%= page.shortDescription %></p>
                </div>
                <div class="card-body">
                    <a class="card-link btn btn-info" href="/pages/<%=page._id%>/edit">Edit</a>             
                    <form class="d-inline" action="/pages/<%=page._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </div>
                <div class="card-footer" style="color: rgb(125 130 137 / 75%)!important;">
                    <b> Last Updated : </b><%= page.updatedAt %>
                </div>
            </div>
    </div>
