<% layout('layouts/boilerplate') %>


    <div class="col-8"> 
        <h1 class="text-center">Edit this Events</h1>
        <div class="col-6 offset-3">
            <form action="/pages/<%=page._id%>?_method=PUT" method="POST" novalidate class="validated-form"> 
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="page[title]" value="<%=page.title %>" required>
                    <div class="valid-feedback">
                        Looks good!
                     </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="page">Short Description</label>
                    <textarea class="form-control" type="text" id="page" name="page[shortDescription]" required><%=page.description%></textarea>
                    <div class="valid-feedback">
                        Looks good!
                     </div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Save</button>
                </div>
            </form>
            <a href="/pages/<%= page._id%>">Go Back</a>
        </div>
    </div>