<% layout('layouts/boilerplate') %>



  <div class="col-8">    

    <h1>All Navbar Items</h1>
    <div>
        <a href="/navbarItems/new">Add a Navbar Item</a>
    </div>
   
    <% for (let c of navbarItems){%>
        <div class="card mb-3">
            <div class="row">
                    <div class="card-body ps-4">
                        <h5 class="card-title">Item: <%= c.item %></h5>
                        <p class="card-text">Link: <%= c.link %></p>
                        <p></p>
                        <a class="btn btn-primary" href="/navbarItems/<%=c._id%>">View more...</a>
                    </div>
                
            </div>
        </div>
    <% }%>
</div>    

