<% layout('layouts/boilerplate') %>

    <h1>All Events</h1>
    <div>
        <a href="/events/new">Add a Event</a>
    </div>
   
    <% for (let c of events){%>
        <div class="card mb-3">
            <div class="row">
                    <div class="card-body ps-4">
                        <h5 class="card-title"><%= c.title %></h5>
                        <p class="card-text"><%= c.description %></p>
                        <a class="btn btn-primary" href="/events/<%=c._id%>">View more...</a>
                    </div>
                
            </div>
        </div>
    <% }%>
    